{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "envGuid":{
            "type": "string",
            "defaultvalue": ""
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
                {
            "apiVersion": "2020-07-01",
            "name": "[concat(parameters('envGuid'),'.lb')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('envGuid'),'.vnet'))]"
            ],
            "tags": {
                "envGuid": "[parameters('envGuid')]"
            },

            "properties": {
                "copy": [
                            {
                                "name": "frontendIPConfigurations",
                                "count": 5,
                                "input":{
                                    "name": "[concat('lb-fe-1',copyIndex('frontendIPConfigurations'))]",
                                    "properties": {
                                        "privateIPAllocationMethod": "Static",
                                        "subnet": {
                                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', concat(parameters('envGuid'),'.vnet'), 'subnet-1-lb-fe')]"
                                        },
                                        "privateIPAddress": "[concat('10.0.1.1',copyIndex('frontendIPConfigurations'))]",
                                        "privateIPAddressVersion": "IPv4"
                                    }
                                }

                            }
                        ]

            }
        },

        {
            "name": "[concat(parameters('envGuid'),'.vnet')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "virtual network",
                "envGuid": "[parameters('envGuid')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "10.0.0.10"
                    ]
                },
                "subnets": [
                    {
                        "name": "subnet-0-box",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "subnet-1-lb-fe",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    },
                    {
                        "name": "subnet-255-plink",
                        "properties": {
                            "addressPrefix": "10.0.255.0/24",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    }

                ]
            }
        },
                        {
            "apiVersion": "2019-04-01",
            "type": "Microsoft.Network/privateLinkServices",
            "name": "[concat(parameters('envGuid'),'.plink.1',copyIndex())]",
            "location": "[resourceGroup().location]",
            "tags": {
                "env": "guid"
            },
            "copy":{
                "name":"plink-loop",
                "count": 5

            },
            "properties": {
                "visibility": {
                    "subscriptions": []
                },
                "autoApproval": {
                    "subscriptions": []
                },
                "enableProxyProtocol": false,
                "loadBalancerFrontendIpConfigurations": [
                    {
                        "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIpConfigurations',concat(parameters('envGuid'),'.lb'), concat('lb-fe-1',copyIndex()))]"
                    }
                ],
                "ipConfigurations": [
                    {
                        "name": "[concat('plink-IP-1',copyIndex())]",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[concat('10.0.255.1',copyIndex())]",
                            "privateIPAddressVersion": "IPv4",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', concat(parameters('envGuid'),'.vnet'), 'subnet-255-plink')]"
                            },
                            "primary": true
                        }
                    }
                ],
                "privateEndpointConnections": []
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/loadBalancers', concat(parameters('envGuid'),'.lb'))]"
            ]
        }

    ],
    "outputs": {}
}